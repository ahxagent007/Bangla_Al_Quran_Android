<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StartReadingActivity"
    android:orientation="vertical"
    android:background="@color/dark_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:background="@color/black"
            android:text="@string/app_name_bangla"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="@string/bismillah_arabic"
            android:textSize="25dp"
            android:gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">

        <Spinner
            android:id="@+id/SP_sura"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/lime_green"
            android:gravity="center"
            android:layout_weight="8"
            />


        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_sura"
            android:background="@drawable/pressed_black"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="2"
            />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_ayats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>